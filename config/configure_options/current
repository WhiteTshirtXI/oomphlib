--enable-suppress-doc
--enable-symbolic-links-for-headers

# Enable MPI
--enable-MPI
--with-mpi-self-tests="mpirun -np 2"

# Enable trilinos and hypre
--with-hypre=/home/david/libs/hypre-2.0.0
--with-trilinos=/home/david/libs/trilinos-9.0.2

CXXFLAGS="-g -DPARANOID -Wall -Wcast-qual -Wredundant-decls"
# Unused: -DRANGE_CHECKING -Winline --std=c++0x

CFLAGS="-O6"
FFLAGS="-O6"
CXX=mpic++
CC=mpicc
F77=mpif77
LD=mpif77
